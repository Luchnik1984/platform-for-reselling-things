# ============================================
# SETTINGS FOR POSTGRESQL
# ============================================

# Database name (will be created automatically in Docker)
DB_NAME=ads_platform
# Database host and port
# Credentials
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# ============================================
# APPLICATION SETTING
# ============================================

# Application Port
APP_PORT=8080

# Frontend port for CO
FRONTEND_PORT=3000

# Directory for uploading files (relative to the project root)
UPLOAD_DIR=./uploads

# Directory for logs
LOG_DIR=./logs

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Login level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=DEBUG

# Show SQL queries (true/false)
HIBERNATE_SQL_LOG_LEVEL=DEBUG

# ============================================
# ADMIN REGISTRATION SETTINGS
# ============================================

# Enable/disable admin registration via API
ADMIN_REGISTRATION_ENABLED=true

# Secret code for admin registration (keep it secret!)
ADMIN_REGISTRATION_CODE=avito-course-2024-secret

# Admin email whitelist (comma-separated, optional)
ADMIN_EMAIL_WHITELIST=superadmin@avito.ru,admin@avito.ru

# ДЛЯ POSTGRESQL
# 1. docker-compose -f docker-compose.db.yml up -d
# 2. Перелючитесь на профиль 'dev': $env:SPRING_PROFILES_ACTIVE="dev"
# 3. ./mvnw spring-boot:run

# ============================================
# ИНСТРУКЦИЯ:
# 1. Скопируйте этот файл как .env
# 2. Отредактируйте .env под свои нужды
# 3. Файл .env добавлен в .gitignore
# ============================================