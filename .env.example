# ============================================
# SETTINGS FOR POSTGRESQL
# ============================================

# Database host and port
DB_HOST=localhost
DB_PORT=5432
# Database name (will be created automatically in Docker)
DB_NAME=ads_platform
# Credentials
DB_USERNAME=postgres
DB_PASSWORD=postgres

# ============================================
# APPLICATION SETTING
# ============================================

# Application Port
APP_PORT=8080

# Frontend port for CO
FRONTEND_PORT=3000

# Directory for uploading files (relative to the project root)
UPLOAD_DIR=./uploads

# Directory for logs
LOG_DIR=./logs

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Login level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=DEBUG

# Show SQL queries (true/false)
SHOW_SQL=true


# ДЛЯ ТЕХ, КТО ХОЧЕТ POSTGRESQL
# 1. docker-compose -f docker-compose.db.yml up -d
# 2. ./mvnw spring-boot:run -Dspring.profiles.active=dev

# ============================================
# ИНСТРУКЦИЯ:
# 1. Скопируйте этот файл как .env.local
# 2. Отредактируйте .env.local под свои нужды
# 3. .env.local добавлен в .gitignore
# ============================================