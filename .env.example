# ============================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ POSTGRESQL
# ============================================

# Хост и порт базы данных
DB_HOST=localhost
DB_PORT=5432

# Имя базы данных (создастся автоматически в Docker)
DB_NAME=ads_platform

# Учетные данные
DB_USERNAME=postgres
DB_PASSWORD=postgres

# ============================================
# НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ============================================

# Порт Spring Boot приложения
APP_PORT=8080

# Порт фронтенда для CORS
FRONTEND_PORT=3000

# Директория для загрузки файлов (относительно корня проекта)
UPLOAD_DIR=./uploads

# Директория для логов
LOG_DIR=./logs

# ============================================
# НАСТРОЙКИ ДЛЯ РАЗРАБОТКИ
# ============================================

# Уровень логирования (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=DEBUG

# Показывать SQL запросы (true/false)
SHOW_SQL=true

# ДЛЯ ТЕХ, КТО ХОЧЕТ POSTGRESQL
# 1. docker-compose -f docker-compose.db.yml up -d
# 2. ./mvnw spring-boot:run -Dspring.profiles.active=dev

# ============================================
# ИНСТРУКЦИЯ:
# 1. Скопируйте этот файл как .env.local
# 2. Отредактируйте .env.local под свои нужды
# 3. .env.local добавлен в .gitignore
# ============================================